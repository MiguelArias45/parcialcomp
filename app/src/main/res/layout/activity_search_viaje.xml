<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar viajes"
        android:layout_marginBottom="8dp" /> <!-- Espacio entre el EditText y el botón -->

    <Button
        android:id="@+id/button_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_gravity="center" /> <!-- Centrar el botón -->

    <TextView
        android:id="@+id/text_view_resultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textSize="18sp" /> <!-- Ajusta el tamaño de fuente aquí -->

</LinearLayout>

